<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditProfileTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/general_color_grey</item>
        <item name="hintTextColor">@color/general_contrast</item>
    </style>

    <style name="DefaultButton" parent="">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="NotFilledButton" parent="">
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/purple_700</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/purple_700</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

</resources>